<p id="notice"><%= notice %></p>

<h4>Usuarios</h4>

<table class="table table-striped table-condensed table-hover "> 
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Correo</th>
      <th>Login</th>
      <th>Estado</th>
      <th>Agencia</th>
      <th>Rol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nombre %></td>
        <td><%= usuario.apellido %></td>
        <td><%= usuario.correo %></td>
        <td><%= usuario.login %></td>
        <td><%= usuario.estado %></td>       
        <td><%= usuario.agencia_id %></td>
        <td><%= usuario.rol %></td>
        <td><%= link_to 'Mostrar', usuario %></td>
        <td><%= link_to 'Editar', edit_usuario_path(usuario) %></td>
        <td><%= link_to 'Eliminar', usuario, method: :delete, data: { confirm: 'EstÃ¡ seguro de eliminar el registro' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Usuario', new_usuario_path, class:'btn btn-primary' %>
